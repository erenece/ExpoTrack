@{
}
@model List<ExpoTrack.Models.Firmalar>

<h2>@ViewBag.FuarAdi Fuarına Katılan Firmalar</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Firma Adı</th>
            <th>Telefon</th>
            <th>Email</th>
            <th>Web Sitesi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var firma in Model)
        {
            <tr>
                <td>@firma.FirmaAdi</td>
                <td>@firma.Telefon</td>
                <td>@firma.Email</td>
                <td>@firma.WebSitesi</td>
            </tr>
        }
    </tbody>
</table>
